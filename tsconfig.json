{
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": "./src",
        "jsx": "preserve",
        "target": "ES6",
        "module": "ESNext",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "paths": {
            "~*": [
                "./*"
            ],
            "*.ts": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}